hosts:
  - world
http:
  - match:
      - sourceLabels:
          version: v0
    route:
      - destination:
          name: world
          labels:
            version: v0
        weight: 100
    fault:
      delay:
        percent: 100
        fixed_delay: 5s
  - match:
      - sourceLabels:
          version: v1
    route:
      - destination:
          name: world
          labels:
            version: v1
        weight: 100
    fault:
      abort:
        percent: 50
        http_status: 503
